{
  "name": "pitch-viewer",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "css:scss": "sass --style=compressed src/scss:dist",
    "css:autoprefixer": "postcss dist/*.css --use autoprefixer --replace",
    "css:lint": "stylelint src/scss/**/*.scss --custom-syntax postcss-scss",
    "build:css": "npm run css:lint && npm run css:scss && npm run css:autoprefixer",
    "watch:css": "onchange \"src/scss\" -- npm run build:css",
    "serve": "browser-sync start --server \"dist\" --files \"dist\"",
    "watch": "run-p serve watch:*",
    "build": "run-p build:*",
    "build:js": "webpack --mode=production",
    "watch:js": "onchange \"src/js\" -- webpack --mode=development",
    "build:html": "posthtml -c posthtml.json",
    "watch:html": "onchange \"src/views\" -- npm run build:html",
    "build:images": "mkdir -p dist/images && cp src/images/* dist/images/",
    "watch:images": "onchange \"src/images\" -- npm run build:images"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "pitchy": "^4.0.7",
    "teoria": "^2.5.0",
    "vexflow": "^5.0.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.26.0",
    "@types/vexflow": "^4.0.0",
    "autoprefixer": "^10.4.20",
    "babel-loader": "^10.0.0",
    "browser-sync": "^3.0.4",
    "eslint": "^9.39.1",
    "eslint-webpack-plugin": "^5.0.2",
    "htmlnano": "^2.1.1",
    "sass": "^1.83.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.5.1",
    "postcss-cli": "^11.0.0",
    "postcss-scss": "^4.0.9",
    "posthtml": "^0.16.6",
    "posthtml-beautify": "^0.7.0",
    "posthtml-cli": "^0.10.0",
    "posthtml-modules": "^0.9.1",
    "stylelint": "^16.10.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.3",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1"
  }
}
